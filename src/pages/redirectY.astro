---
import "../styles/utils.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="utils.css" />
        <title>Payment Processing</title>
        <script>
            setTimeout(function () {
                window.location.href = "https://forms.gle/wFgtWjVEEXvSCFky9"; // Replace with your desired redirection URL
            }, 7000); // 7 seconds
        </script>
    </head>
    <body>
        <div class="wrapper">
            <div class="iron-man-wrapper">
                <!-- Your existing Iron Man animation HTML here -->
                <div class="tony-stark">
                    <img
                        src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/651105/Tony_Stark.svg"
                    />
                </div>

                <div class="arc-reactor">
                    <img
                        src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/651105/Arc_Reactor.svg"
                    />
                </div>

                <div class="iron-man-helmet">
                    <img
                        src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/651105/Iron_Man_Helmet.svg"
                    />
                </div>

                <div class="iron-man-left-arm">
                    <img
                        src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/651105/Iron_Man_Left_Arm.svg"
                    />
                    <div class="flame-left-hand"></div>
                </div>

                <div class="iron-man-right-arm">
                    <img
                        src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/651105/Iron_Man_Right_Arm.svg"
                    />
                    <div class="flame-right-hand"></div>
                </div>

                <div class="iron-man-left-leg">
                    <img
                        src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/651105/Iron_Man_Left_Leg.svg"
                    />
                    <div class="flame-left-leg"></div>
                </div>

                <div class="iron-man-right-leg">
                    <img
                        src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/651105/Iron_Man_Right_Leg.svg"
                    />
                    <div class="flame-right-leg"></div>
                </div>

                <div class="iron-man-chest">
                    <img
                        src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/651105/Iron_Man_Chest.svg"
                    />
                </div>
            </div>
            <div class="shadow"></div>
        </div>
        <h3 id="animationText" style="color: #ffffff;"></h3>

        <script>
            // Function to create the dot animation
            function dotAnimation() {
                const textElement = document.getElementById("animationText");
        
                // Use the non-null assertion operator (!) to tell TypeScript that textElement is not null
                if (textElement!) {
                    let dots = 0;
        
                    // Update the text content with dots
                    function updateText() {
                        textElement!.textContent =
                            "Redirecting to Payment Page" + ".".repeat(dots);
                        dots = (dots + 1) % 4; // Reset to 0 after reaching 3 dots
                    }
        
                    // Update text every 500 milliseconds (you can adjust the timing)
                    setInterval(updateText, 500);
                } else {
                    console.error("Element with ID 'animationText' not found");
                }
            }
        
            // Start the dot animation when the page loads
            dotAnimation();
        </script>
        
    </body>
</html>
